<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= (@lesson.video.present?) ? (video_tag @lesson.video, autoplay: false, controls: true, class: "rounded") : "No video Avaiable" %>

    <div class = "my-2 border p-4 rounded">
      <h1 class = "text-2xl font-semibold">
        <%= @lesson.title %>
      </h1>
      <p class="text-gray-700">
        <%= @lesson.description %>
      </p>
    </div>
  </div>
</div>
